<div class="card">
  <h1>Articles</h1>  
</div>

<div class="card">
  <ul class="articles">
    <% @articles.each do |article| %>
      <% unless article.archived? %>
        <li>
          <%= link_to article.title, article %>
        </li>
      <% end %>
    <% end %>


    <% if @articles.length == 0 %>
        The list is empty
    <% end %>
  </ul>
</div>